{
  "name": "fueled-assignment",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "build": "npm run clean && npm run tsc:compile && npm run copy-files && npm run lint",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.graphql dist/",
    "generate-types": "graphql-codegen",
    "start": "node dist/server.js",
    "dev": "nodemon --config nodemon.json src/server.ts",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest",
    "tsc:compile": "tsc",
    "tsc:validate": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "author": "",
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  },
  "dependencies": {
    "@graphql-codegen/add": "3.1.1",
    "@graphql-codegen/core": "2.5.1",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@prisma/client": "3.11.1",
    "apollo-server-express": "3.6.4",
    "bcryptjs": "2.4.3",
    "copyfiles": "2.4.1",
    "date-fns": "2.28.0",
    "dotenv": "10.0.0",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "getenv": "1.0.0",
    "graphql": "16.3.0",
    "jsonwebtoken": "8.5.1",
    "lodash.merge": "4.6.2",
    "rimraf": "3.0.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "7.2.13",
    "@types/express": "4.17.12",
    "@types/getenv": "1.0.0",
    "@types/graphql": "14.5.0",
    "@types/jest": "27.4.1",
    "@types/lodash.merge": "4.6.6",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "concurrently": "6.2.0",
    "eslint": "7.29.0",
    "jest": "27.5.1",
    "nodemon": "2.0.7",
    "prettier": "2.3.1",
    "prisma": "3.11.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "typescript": "4.3.4"
  }
}
