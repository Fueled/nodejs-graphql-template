{
  "name": "fueled-graphql-starter",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "npm run prebuild && npm run ts:build && npm run copy-files && npm run lint",
    "copy-files": "copyfiles -u 1 src/**/*.{graphql,gql} dist/",
    "generate-types": "graphql-codegen",
    "start": "node dist/server.js",
    "dev": "nodemon --config nodemon.json src/server.ts",
    "format": "prettier --write .",
    "lint": "eslint \"{src,apps,libs,test}/*.{js,ts}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/*.{js,ts}\" --quiet --fix",
    "test": "jest",
    "ts:build": "tsc",
    "ts:lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "author": "",
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "3.11.1",
    "apollo-server-express": "3.6.4",
    "bcryptjs": "2.4.3",
    "date-fns": "2.28.0",
    "dotenv": "10.0.0",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "getenv": "1.0.0",
    "graphql": "16.3.0",
    "rimraf": "3.0.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "7.2.13",
    "@types/express": "4.17.12",
    "@types/getenv": "1.0.0",
    "@types/graphql": "14.5.0",
    "@types/jest": "27.4.1",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "concurrently": "6.2.0",
    "copyfiles": "2.4.1",
    "eslint": "7.29.0",
    "jest": "27.5.1",
    "nodemon": "2.0.7",
    "prettier": "2.3.1",
    "prisma": "3.11.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "typescript": "4.5.5"
  }
}
