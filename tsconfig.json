{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    // "strictPropertyInitialization": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
